</head>

<body>

{% raw %}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <!-- benÃ¶tigt bootstrap.js
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            -->
            <a class="brand" href="#">Plesynd</a>
            <span ng-show="online_status" class="pull-right label label-success">Online</span>
            <span ng-show="!online_status" class="pull-right label label-important">Offline</span>
            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <p>online/offline bla blub</p>
            </div>
        </div><!--/span-->
    </div><!--/row-->
</div><!--/.fluid-container-->

<ul class="nav nav-tabs">
    <li ng-class="{active: 'dashboard' == active_slug}"><a href="#/dashboard">dashboard</a></li>
    <li ng-class="{active: workspace.slug == active_slug}" ng-repeat="workspace in workspaces" >
        <a href="#/workspace/{{workspace.slug}}">{{workspace.title}}</a>
    </li>
</ul>
Name {{ active_slug }}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div ng-view></div>
        </div><!--/span-->
    </div><!--/row-->

    <hr>

    <footer>
        <p>&copy; Roman Sachse 2012</p>
    </footer>

</div><!--/.fluid-container-->


<!-- Container that holds the different workspaces -->
<script type="text/ng-template" id="workspaceContainer">
    <div class="well span5" ng-repeat="widget in workspace.widgets">
        <iframe ng-show="widget.uri" ng-src="{{widget.uri}}" width={{widget.width}} height={{widget.height}}></iframe>
    </div>
</script>

